{
  "manifest_version": 3,
  "name": "Text Command Palette",
  "version": "1.0.0",
  "description": "VS Codeâ€“style command palette for transforming selected text anywhere.",
  "icons": {
    "16": "icon.svg",
    "32": "icon.svg",
    "48": "icon.svg",
    "128": "icon.svg"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"],
      "run_at": "document_start"
    }
  ],
  "host_permissions": ["<all_urls>"]
}
